@model RegisterViewModel
@{
    ViewData["Title"] = "Đăng kí";
}
<!-- Breadcrumbs -->
<style>
    body {
        font-size: 14px;
    }
</style>

<div class="breadcrumbs">
    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                <ul>
                    <li class="home"> <a title="Go to Home Page" href="/">Trang chủ</a><span>&raquo;</span></li>
                    <li><strong>Đăng kí</strong></li>
                </ul>
            </div>
        </div>
    </div>
</div>
<!-- Breadcrumbs End -->
<!-- Main Container -->
<section class="main-container col1-layout">
    <div class="main container">
        <div class="page-content">
            <div class="account-login">
                <div class="col-md-3 col-sm-2"></div>
                <div class="col-md-6 col-sm-8">
                    <div class="single-input p-bottom50 clearfix">
                        <form asp-route-returnUrl="@ViewData["ReturnUrl"]" method="post">
                            <div class="row">
                                <div class="col-xs-12">
                                    <div class="check-title">
                                        <div asp-validation-summary="All" class="text-danger"></div>
                                    </div>
                                </div>
                                <div class="col-sm-6" style="margin-bottom: 15px;">
                                    <label>Họ và tên:<span class="required">*</span></label>
                                    <div class="input-text">
                                        <input type="text" asp-for="FullName" name="fullName" class="form-control">
                                    </div>
                                </div>
                                <div class="col-sm-6" style="margin-bottom: 15px;">
                                    <label>Tên đăng nhập:<span class="required">*</span></label>
                                    <div class="input-text">
                                        <input type="text" asp-for="UserName" name="userName" class="form-control">
                                    </div>
                                </div>
                                <div class="col-sm-6" style="margin-bottom: 15px;">
                                    <label>Email:<span class="required">*</span></label>
                                    <div class="input-text">
                                        <input type="text" asp-for="Email" name="email" class="form-control">
                                    </div>
                                </div>
                                <div class="col-xs-12" style="margin-bottom: 15px;">
                                    <label>Mật khẩu:<span class="required">*</span></label>
                                    <div class="input-text">
                                        <input type="password" asp-for="Password" name="password" class="form-control">
                                    </div>
                                </div>
                                <div class="col-xs-12" style="margin-bottom: 15px;">
                                    <label>Xác nhận mật khẩu:<span class="required">*</span></label>
                                    <div class="input-text">
                                        <input type="password" asp-for="ConfirmPassword" name="confirmPassword" class="form-control">
                                    </div>
                                </div>
                                <div class="col-xs-12" style="margin-bottom: 15px;">
                                    <label>Ngày sinh:</label>
                                    <div class="input-text">
                                        <input type="date" asp-for="BirthDay" name="birthDay" class="form-control">
                                    </div>
                                </div>
                                <div class="col-xs-12" style="margin-bottom: 15px;">
                                    <label>Giới tính:</label>
                                    <div class="input-text">
                                        <select asp-for="Sex" name="sex" style="width:47%;">
                                            <option>-- Chọn --</option>
                                            <option value="Nam">Nam</option>
                                            <option value="Nữ">Nữ</option>
                                        </select>
                                        @*<input type="checkbox" asp-for="Sex" name="sex" class="form-control">*@
                                    </div>
                                </div>
                                
                                <div class="col-sm-6" style="margin-bottom: 15px;">
                                    <label>Số điện thoại:</label>
                                    <div class="input-text">
                                        <input type="text" name="phoneNumber" asp-for="PhoneNumber" class="form-control">
                                    </div>
                                </div>
                                <div class="col-sm-6" style="margin-bottom: 15px;">
                                    <label>Địa chỉ:</label>
                                    <div class="input-text">
                                        <input type="text" name="address" asp-for="Address" class="form-control">
                                    </div>
                                </div>
                                <div class="col-xs-12">
                                    <div class="submit-text">
                                        <button type="submit" class="button"><i class="fa fa-user"></i>&nbsp; <span>Đăng kí</span></button>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Main Container End -->

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}