@using System.Linq
@model LoginViewModel
@inject SignInManager<AppUser> SignInManager

@{
    ViewData["Title"] = "Đăng nhập";
}
<!-- Breadcrumbs -->
<style>
    body{
        font-size: 14px;
    }
</style>
<div class="breadcrumbs">
    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                <ul>
                    <li class="home"> <a title="Go to Home Page" href="/">Trang chủ</a><span>&raquo;</span></li>
                    <li><strong>Đăng nhập</strong></li>
                </ul>
            </div>
        </div>
    </div>
</div>
<!-- Breadcrumbs End -->
<!-- Main Container -->
<section class="main-container col1-layout">
    <div class="main container">
        <div class="page-content">
            <div class="account-login">
                <div class="box-authentication">
                    <form asp-route-returnurl="@ViewData["ReturnUrl"]" method="post">
                        <h4>Đăng nhập</h4>
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <p class="before-login-text">Chào mừng trở lại! đăng nhập vào tài khoản của bạn</p>
                        <label for="emmail_login">Tên đăng nhập<span class="required">*</span></label>
                        <input type="text" asp-for="UserName" class="form-control">
                        <label for="password_login">Mật khẩu<span class="required">*</span></label>
                        <input id="password_login" asp-for="Password" type="password" class="form-control">
                        <label class="inline" asp-for="RememberMe">
                            <input asp-for="RememberMe" />
                            Nhớ tôi
                        </label>
                        <p class="forgot-pass"><a asp-action="ForgotPassword">Quên mật khẩu?</a></p>
                        <button type="submit" class="button">
                            <i class="icon-lock icons"></i>&nbsp; <span>Đăng nhập</span>
                        </button>
                    </form>

